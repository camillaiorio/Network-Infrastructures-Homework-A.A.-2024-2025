/etc/init.d/networking restart
/etc/init.d/quagga restart

ip route add 100.0.0.0/24 via 200.0.0.6

iptables -t nat -A POSTROUTING -s 192.168.0.0/24 -j MASQUERADE
iptables -A FORWARD -m state --state RELATED,ESTABLISHED -j ACCEPT


#iptables -P FORWARD DROP

iptables -A FORWARD -o eth3 -s 192.168.0.0/24 -j ACCEPT
iptables -A FORWARD -i eth3 -d 192.168.0.0/24 -j ACCEPT

# forward requests from pc2
iptables -t nat -A PREROUTING -i eth2 -p tcp --dport 1194 -j DNAT --to-destination 192.168.0.100:7000
iptables -A FORWARD -i eth2 -p tcp -d 192.168.0.100 --dport 7000 -j ACCEPT
# forward requests from pc1
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 1194 -j DNAT --to-destination 192.168.0.100:7000
iptables -A FORWARD -i eth0 -p tcp -d 192.168.0.100 --dport 7000 -j ACCEPT

